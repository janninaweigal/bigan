.identitybox{
  width:60%;
  height:100%;
  margin:0px auto;
}
.identity-item{
  width:100%;
  height:49%;
  padding:0px;
}
.identity-item:first-child{
  border-bottom:1px solid #000;
}
.identity-img{
  width:250rpx;
  height:250rpx;
  border-radius:50%;
  border:1px solid #999;
}
.identity-user{
  width:83%;
  text-align: center;
  display:inline-block;
  background-color:#D7D7D7;
  color:#000;
  padding:7px 0px;
  border-radius:10px;
  box-sizing:border-box;
  margin-top:32px;
  margin-bottom:20px;
  font-size:14px;
}
.identity-exit{
  position:fixed;
  bottom:10px;
  left:50%;
  margin-left:-22px;
  font-size:12px;
  font-weight:bolder;
}