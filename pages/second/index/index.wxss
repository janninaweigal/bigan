/* 消息 */
.chatbox{
  width:100%;
  padding-left:15px;
  padding-right:10px;
  box-sizing:border-box;
  background-color: #fff;
  border-bottom:1px solid #bbb;
}
.chatbox:last-child{
  border-bottom:none;
}
.chatbox .message-item{
  width:100%;
  padding-top:10px;
  padding-bottom:5px;
  
}
.chatbox .message-item .name{
  font-size:16px;
  font-weight:bold;
}
.chatbox .headurl{
  width:40px;
  height:40px;
  border-radius:10px;
}
.chatbox .message-content-right{
  /* border:1px solid red; */
  margin-left:10px;
}
.chatbox .message-content-right .chattime{
  color:#BBB;
  font-size:12px;
}
.chatbox .message-content-msg{
  width:100%;
  color:#BBB;
  padding:5px 0px;
}
.chatbox .message-content-msg .msg-left{
  width:450rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow:hidden;
  margin-right:10px;
}
.chatbox .message-content-msg .msg-right{
  white-space: nowrap;
}
