page{
  width:100%;
  height:100%;
  font-family:"微软雅黑";
  background-color:#F2F2F2;
}
.container{
  width:100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  box-sizing:border-box;
  padding:10px 15px;
}
.bg-row{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
}
.bg-column{
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
