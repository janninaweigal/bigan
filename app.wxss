page{
  width:100%;
  height:100%;
  font-family:"微软雅黑";
  background-color:#F2F2F2;
  font-size:14px;
}
.container{
  width:100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  box-sizing:border-box;
  padding:0px 10px;
}
.bg-row{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
}
.bg-row-left{
  display:flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:center;
}
.bg-row-center{
  display:flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
}
.bg-column-center{
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.bg-column-left{
  display:flex;
  flex:1;
  flex-direction: column;
  justify-content:flex-start;
  align-items:flex-start;
}
.bg-textarea{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:flex-start;
}
.bg-column{
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.bg-width{
  width:100%;
}
.bg-fixed-bottom-tab{
  width:100%;
  position:fixed;
  bottom:0px;
  left:0px;
  /* display:flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center; */
  box-sizing:border-box;
  padding:10px 0px;
  font-size:16px;
  background-color:#D7D7D7;
}
.tab-item3{
  display:inline-block;
  width:33.3%;
  text-align:center;
}
.bg-fixed-bottom-tab .tab-active{
  font-weight:bolder;
}
.tab-rela{
  position:relative;
}
.item-top-right{
  position:absolute;
  top:-7px;
  right:25%;
  background-color:#12A1DF;
  color:#fff;
  font-size:10px;
  padding:1px;
}
/* 个人信息 */
.ownContainer{
  width:100%;
  margin-top:10px;
  background-color:#fff;
  color:#000;
  padding:17px 0px;
}
.ownContainer .attchicon{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  border:1px solid #000;
}
.ownContainer .attach-text{
  margin-top:18px;
  font-weight:bolder;
}
/* 新增 修改 */
.infocontainer{
  width:100%;
  background-color:#fff;
  color:#000;
}
.infocontainer input{
  flex:1;
  text-align:right;
  padding-right:10px;
}
.info-item{
  width:100%;
  padding:10px 0px;
}
.arrow-right{
  width:15px;
  height:15px;
  margin-right:10px;
}
/* 合并版 */
.linebox{
  width:100%;
  background-color:#fff;
  color:#000;
  padding:15px 0px;
  margin:10px 0px;
}
/* 保存 */
.submitbtn{
  margin:10px 15px;
}
.middle{
  margin:10px 0px;
  padding:0px 10px;
  box-sizing:border-box;
}
/* 工作经历，笔杆专业技能 */
.item-left{
  white-space: nowrap;
}
.bg-item-textarea{
  margin-left:5px;
  border-radius:5px;
  box-sizing:border-box;
  padding:2px 5px;
}
/* 徽章 */
.badgecontainer{
  display:flex;
  flex-direction: row;
  justify-content:space-around;
  align-items:center;
  flex-wrap:wrap;
  margin:10px 0px;
  padding:0px 10px;
  box-sizing:border-box;
}
.badge-btn{
  border-radius:10px;
  padding:3px 25px;
  white-space: nowrap;
  background-color:#D7D7D7;
  color:#000;
  font-size:11px;
  margin-bottom:10px;
}
/* 附件 */
.attchContainer{
  box-sizing:border-box;
  padding:5rpx 80rpx;
}
.attchbox{
  background-color:#D7D7D7;
  color:#000;
  margin:15px 0px;
  padding:10px 10px;
  border-radius:8px;
  font-size:25rpx;
  text-align:center;
}
.attchtext{
  color:#D7D7D7;
}